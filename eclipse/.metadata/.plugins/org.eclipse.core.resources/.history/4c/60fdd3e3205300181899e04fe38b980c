package com.gulhavard.nationcraft.armor;

import com.gulhavard.nationcraft.Main;
import com.gulhavard.nationcraft.init.ModItems;
import com.gulhavard.nationcraft.util.IHasModel;

import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item.ToolMaterial;
import net.minecraft.item.ItemPickaxe;

public class ArmorBase extends ItemPickaxe implements IHasModel {
	public ArmorBase(String name, ToolMaterial material)
	{
		super(material);
		setUnlocalizedName(name);
		setRegistryName(name);
		setCreativeTab(CreativeTabs.TOOLS);
		
		ModItems.ITEMS.add(this);
	}
	
	@Override
	public void registerModels()
	{
		Main.proxy.registerItemRenderer(this, 0, "inventory");
	}
}
